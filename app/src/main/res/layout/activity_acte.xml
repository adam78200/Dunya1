<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/df"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acte.Acte">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btv"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/design_default_color_on_secondary"
        app:itemIconSize="?android:attr/buttonCornerRadius"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextAppearanceInactive="@style/CardView.Light"
        app:itemTextColor="#FDFDFD"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigat"
        tools:targetApi="p" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="414dp"
        android:layout_height="654dp"
        android:stretchMode="columnWidth"
        android:numColumns="auto_fit"
        app:layout_constraintBottom_toTopOf="@+id/btv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

</androidx.constraintlayout.widget.ConstraintLayout>